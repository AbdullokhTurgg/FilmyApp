<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/general_navigation"
    app:startDestination="@id/nav_movies">

    <fragment
        android:id="@+id/nav_movies"
        android:name="com.example.movieappazi.ui.all_movies_screen.AllMoviesFragment"
        android:label="Movies"
        tools:layout="@layout/fragment_all_movies">
        <action
            android:id="@+id/action_allMoviesFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@anim/slide_out_left" />
        <action
            android:id="@+id/action_allMoviesFragment_to_actorsFragment"
            app:destination="@id/nav_person" />
        <action
            android:id="@+id/action_allMoviesFragment_to_storageMoviesFragment"
            app:destination="@id/nav_storage" />
        <action
            android:id="@+id/action_nav_movies_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment"
            app:enterAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left" />

        <action
            android:id="@+id/action_nav_movies_to_movieDetailsFragment2"
            app:destination="@id/movieDetailsFragment" />
        <action
            android:id="@+id/action_nav_movies_to_seeAllMoviesFragment"
            app:destination="@id/seeAllMoviesFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_person"
        android:name="com.example.movieappazi.ui.actors_screen.ActorsFragment"
        android:label="Actors"
        tools:layout="@layout/fragment_actors">
        <action
            android:id="@+id/action_nav_person_to_actorsDetailsFragment"
            app:destination="@id/actorsDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.example.movieappazi.ui.movie_details_screen.MovieDetailsFragment"
        android:label="fragment_movie_details"
        tools:layout="@layout/fragment_movie_details">
        <argument
            android:name="movie"
            app:argType="com.example.movieappazi.uiModels.movie.MovieUi" />
        <action
            android:id="@+id/action_movieDetailsFragment_self"
            app:destination="@id/movieDetailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/exit_anim"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:popUpTo="@id/movieDetailsFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_movieDetailsFragment_to_actorsDetailsFragment"
            app:destination="@id/actorsDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_storage"
        android:name="com.example.movieappazi.ui.storage_movies_screen.StorageMoviesFragment"
        android:label="Favourites"
        tools:layout="@layout/fragment_storage_movies" >
        <action
            android:id="@+id/action_nav_storage_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment"
            app:enterAnim="@anim/exit_anim"
            app:exitAnim="@anim/open_anim"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/actorsDetailsFragment"
        android:name="com.example.movieappazi.ui.actors_details_screen.ActorsDetailsFragment"
        android:label="fragment_actors_details"
        tools:layout="@layout/fragment_actors_details">
        <argument
            android:name="person"
            app:argType="com.example.movieappazi.uiModels.person.PersonUi" />
    </fragment>
    <fragment
        android:id="@+id/nav_search"
        android:name="com.example.movieappazi.ui.search_movies_screen.SearchMoviesFragment"
        android:label="SearchMoviesFragment">
        <action
            android:id="@+id/action_nav_search_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>

        <argument
            android:name="id"
            app:argType="integer" />
        <argument
            android:name="name"
            app:argType="string"
            app:nullable="true" />
    <fragment
        android:id="@+id/seeAllMoviesFragment"
        android:name="com.example.movieappazi.ui.see_all_movies_screen.SeeAllMoviesFragment"
        android:label="fragment_all_top_rated_movies"
        tools:layout="@layout/fragment_see_more" >
        <argument
            android:name="type"
            app:argType="com.example.movieappazi.ui.see_all_movies_screen.MovieType" />
        <action
            android:id="@+id/action_seeAllMoviesFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
</navigation>