<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:motionInterpolator="linear">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@+id/nestedScrollView3"
            motion:touchAnchorSide="top" />
        <KeyFrameSet>

            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="0"
                motion:motionTarget="@+id/top_title_constraint_actor">
                <CustomAttribute
                    motion:attributeName="textSize"
                    motion:customDimension="20sp" />
            </KeyAttribute>

            <KeyAttribute
                android:alpha="1.0"
                motion:framePosition="80"
                motion:motionTarget="@+id/top_title_constraint_actor">
                <CustomAttribute
                    motion:attributeName="textSize"
                    motion:customDimension="16sp" />
            </KeyAttribute>

        </KeyFrameSet>


    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/nestedScrollView3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/appBarLayout2" />
        <Constraint
            android:id="@+id/appBarLayout2"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <PropertySet android:visibility="visible" />
        </Constraint>

        <Constraint
            android:id="@+id/poster_card"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginEnd="20dp"
            android:rotation="0"
            motion:layout_constraintBottom_toBottomOf="@id/appBarLayout2"
            motion:layout_constraintEnd_toStartOf="@+id/top_title_constraint_actor"
            motion:layout_constraintTop_toBottomOf="@id/appBarLayout2">
            <PropertySet android:visibility="visible" />
        </Constraint>
        <Constraint
            android:id="@+id/up_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/nestedScrollView3"
            motion:layout_constraintTop_toBottomOf="@+id/appBarLayout2" />


    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/nestedScrollView3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/appBarLayout2" />

        <Constraint
            android:id="@+id/appBarLayout2"
            android:layout_width="0dp"
            android:layout_height="?android:attr/actionBarSize"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <PropertySet android:visibility="invisible" />
        </Constraint>

        <Constraint
            android:id="@+id/poster_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:rotation="360"
            motion:layout_constraintEnd_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <PropertySet android:visibility="gone" />
        </Constraint>

    </ConstraintSet>
</MotionScene>