<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/category_detail_image"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:background="@color/fg"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundImageView" />

    <TextView
        android:id="@+id/category_detail_title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/aclonica"
        android:text="lorem_ipsum"
        android:textColor="@color/text"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/category_detail_image"
        app:layout_constraintStart_toStartOf="@+id/category_detail_image"
        app:layout_constraintTop_toBottomOf="@+id/category_detail_image" />

    <TextView
        android:id="@+id/category_detail_imdb"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@color/text"
        app:layout_constraintEnd_toEndOf="@id/category_detail_image"
        app:layout_constraintTop_toTopOf="@id/category_detail_image" />

</androidx.constraintlayout.widget.ConstraintLayout>