<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alert_motion_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:layoutDescription="@xml/alert_item_for_movie_det_scene"
  >

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/aler_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginBottom="-120dp"
            app:cardBackgroundColor="@color/dark_gray"
            app:cardCornerRadius="@dimen/_12sdp">

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="@dimen/_124sdp"
                android:layout_height="@dimen/_160sdp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                tools:src="@drawable/img_intro_three" />

        </com.google.android.material.card.MaterialCardView>


        <LinearLayout
            android:id="@+id/item_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bsd_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="@dimen/_4sdp"
                android:foreground="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_close" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:ellipsize="end"
                android:fontFamily="@font/frijole"
                android:gravity="start"
                android:maxLines="3"
                android:paddingStart="@dimen/_146sdp"
                android:paddingEnd="@dimen/_6sdp"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                tools:text="Shahrukh Khan" />


            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/voteAverage_item_cast"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_150sdp"
                android:max="10"
                android:numStars="10"
                android:progressBackgroundTint="@color/green"
                android:progressTint="@color/gold"
                app:layout_constraintBottom_toBottomOf="@id/movieVoteAverage"
                app:layout_constraintEnd_toEndOf="@id/title"
                app:layout_constraintStart_toStartOf="@id/title"
                app:layout_constraintTop_toTopOf="@id/movieVoteAverage">

            </androidx.appcompat.widget.AppCompatRatingBar>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/_3sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:background="@drawable/vertical_show_line" />

                <TextView
                    android:id="@+id/releaseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/frijole"
                    android:maxLines="2"
                    android:text="Filmography"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/overview_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:ellipsize="end"
                android:fontFamily="@font/wellfleet"
                android:maxLines="4"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                tools:text="In a time when monsters walk the Earth, humanity’s fight for its future sets Godzilla and Kong on a collision course that will see the two most powerful forces of nature on the planet collide in a spectacular battle for the ages." />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/play_button"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_toStartOf="@+id/add_to_watchlist_btn"
                android:backgroundTint="@color/white"
                android:text="More"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:icon="@drawable/ic_more"
                app:iconGravity="textStart"
                app:iconTint="@color/black" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.motion.widget.MotionLayout>


