<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieAppAzi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialog</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:navigationBarColor">@color/black</item>

        <item name="android:windowFullscreen">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetStyle</item>
    </style>

    <style name="AppBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/black_light</item>
    </style>
    <!--    <style name="ThemeOverlay.App.TabLayout" parent="">-->
    <!--        <item name="tabIconTint">@color/icons_color</item>-->
    <!--        <item name="colorPrimary">@color/colorAccent</item>-->
    <!--        <item name="colorOnSurface">@color/white</item>-->
    <!--    </style>-->

    <style name="MovieDetailsTextStyle.Italic" parent="MovieDetailsTextStyle">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MovieDetailsTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/movieDetailsTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:layout_width">0dp</item>
        <item name="fontFamily">monospace</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BtnNextStyle" parent="PrevBtnStyle">
        <item name="shapeAppearance">@style/ShapeAppearanceNextBtn</item>
    </style>

    <style name="ShapeAppearanceNextBtn" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
    </style>

    <style name="roundImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
        <item name="color">@color/text</item>

    </style>

    <style name="PrevBtnStyle" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor">@color/gold</item>
        <item name="shapeAppearance">@style/ShapeAppearancePrevBtn</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="ShapeAppearancePrevBtn" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeBottomRight">30dp</item>
    </style>


    <style name="MoviesCategoryCardViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="cardCornerRadius">14dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="layout_constraintDimensionRatio">1.3:1</item>
    </style>

    <style name="TitlesForRvTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="fontFamily">@font/aclonica</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="seeAllTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/aclonica</item>
        <item name="android:textColor">@color/blueClearColor</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle_progress</item>
    </style>

    <style name="titleAppBar" parent="Theme.MovieAppAzi">
        <!-- Customize your theme here. -->
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/aclonica</item>
    </style>
</resources>