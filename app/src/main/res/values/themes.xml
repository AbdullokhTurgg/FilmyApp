<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieAppAzi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="android:colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="backgroundTint">@color/background800</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!--    <style name="ThemeOverlay.App.TabLayout" parent="">-->
    <!--        <item name="tabIconTint">@color/icons_color</item>-->
    <!--        <item name="colorPrimary">@color/colorAccent</item>-->
    <!--        <item name="colorOnSurface">@color/white</item>-->
    <!--    </style>-->

    <style name="MovieDetailsTextStyle.Italic" parent="MovieDetailsTextStyle">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MovieDetailsTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/movieDetailsTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:layout_width">0dp</item>
        <item name="fontFamily">monospace</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BtnNextStyle" parent="PrevBtnStyle">
        <item name="shapeAppearance">@style/ShapeAppearanceNextBtn</item>
    </style>

    <style name="ShapeAppearanceNextBtn" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
    </style>

    <style name="PrevBtnStyle" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor">@color/gold</item>
        <item name="shapeAppearance">@style/ShapeAppearancePrevBtn</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="ShapeAppearancePrevBtn" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeBottomRight">30dp</item>
    </style>


    <style name="MoviesCategoryCardViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="cardCornerRadius">14dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="layout_constraintDimensionRatio">1.3:1</item>
    </style>
    <style name="TitlesForRvTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="fontFamily">@font/aclonica</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="seeAllTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/aclonica</item>
        <item name="android:textColor">@color/blueClearColor</item>
    </style>
</resources>